<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.usecases.budget.BudgetFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/tvBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="CÃ³mputo"
            android:gravity="center"
            android:textColor="@color/color_main"
            android:textSize="30sp" />

        <TextView
            android:layout_below="@+id/tvBudget"
            android:id="@+id/Budget_tvTotalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/total_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_light"
            android:textSize="20sp"
            android:padding="10dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_rvC"
            android:layout_below="@+id/Budget_tvTotalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/table_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Budget_material_tvName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Material"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/Budget_material_tvAmount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/Budget_material_tvCost"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:padding="5dp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Budget_rvCalculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>