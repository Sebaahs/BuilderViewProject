<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuilderView" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryVariant">@color/color_aux</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_sec_01</item>
        <item name="colorSecondaryVariant">@color/color_sec_02</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_anim</item>
    </style>

    <style name="splashTheme" parent="Theme.BuilderView">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>